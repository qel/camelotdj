{
  "name": "Camelot DJ",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Filter Beatport track lists by key.",
  "homepage_url": "http://camelotdj.com",
  "icons": {
    "128": "icons/camelotdj128.png"
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/cdj38.png",
    "default_title": "Camelot DJ"
  },
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "https://www.beatport.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.beatport.com/*"],
      "css": ["src/content.css"]
    },
    {
      "matches": ["https://www.beatport.com/*"],
      "run_at": "document_start",
      "js": ["src/content.js"]
    }
  ]
}