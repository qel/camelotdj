{
  "name": "Camelot DJ",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Raquel's amazing Beatport extension",
  "homepage_url": "http://camelotdj.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "https://www.beatport.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.beatport.com/*"],
      "css": ["src/content.css"]
    },
    {
      "matches": ["https://www.beatport.com/*"],
      "run_at": "document_start",
      "js": ["src/content.js"]
    }
  ]
}